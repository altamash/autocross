<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1" >
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/carsetup"
            android:layout_width="300dp"
            android:layout_height="346dp"
            android:background="@layout/carsetup" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/wrap_content"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:background="@layout/recordlap" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/compare"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:background="@layout/compare" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:background="@layout/history" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1" >
    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/tagvideos"
            android:layout_width="wrap_content"
            android:layout_height="297dp"
            android:background="@layout/tagvideos" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="297dp"
            android:background="@layout/setting" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="297dp"
            android:background="@drawable/gofaster" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </View>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1" >
    </View>

</LinearLayout>