<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veriqual.gofast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.veriqual.gofast.Splash"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veriqual.gofast.TaggingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.MediaPlayerDemo_Video"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.VideosListActivity"
            android:label="@string/title_activity_videos_list" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.ComparisonListActivity"
            android:label="@string/title_comparison_list" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.ComparisonDetailActivity"
            android:label="@string/title_comparison_detail"
            android:parentActivityName=".ComparisonListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ComparisonListActivity" />
        </activity>
        <activity
            android:name="com.veriqual.gofast.ComparisonVideosActivity"
            android:label="@string/title_activity_comparison_videos" >
        </activity>
        <activity
            android:name="com.veriqual.gofast.FolderActivity"
            android:label="@string/title_activity_folder" >
        </activity>
    </application>

</manifest>